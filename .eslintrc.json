{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "next",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "import/order": ["warn", { "alphabetize": { "order": "asc" } }],
    "@typescript-eslint/explicit-module-boundary-types": "off", // Missing return type on function
    "sort-imports": "off", // Imports should be sorted alphabetically
    "react-hooks/rules-of-hooks": "off" // React Hook "useColorModeValue" is called conditionally.
  }
}
